@model SignupDTO
@{
    ViewData["Title"] = "createAccount";
    Layout = "~/Views/Shared/_menu.cshtml";
}

<form method="post">
<div class="mb-3">
    @ViewData["result"]
</div>
<div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name">
</div>
<div class="mb-3">
    <label class="form-label">DOB</label>
    <input type="date" class="form-control" asp-for="DOB">
</div>
<div class="mb-3">
    <label class="form-label">Gender</label>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Gender" value="Male">
        <label class="form-check-label">Male</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Gender" value="female">
        <label class="form-check-label">Female</label>
    </div>
</div>
<div class="mb-3">
    <label class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Email">
</div>
<div class="mb-3">
    <label class="form-label">Password</label>
    <input type="password" class="form-control" asp-for="Password">
</div>
<div class="mb-3">
    <label class="form-label">Confirm Password</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword">
</div>

<div class="mb-3">
    
        <input type="submit" class="btn btn-primary" value="Create Account" asp-action="Singup">
    
</div>
</form>