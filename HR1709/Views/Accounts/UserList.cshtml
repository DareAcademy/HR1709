@model List<UserDTO>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_menu.cshtml";
}
<form method="post">
    <table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Action
        </th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserDTO item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>
                        <input type="submit" value="Add Role" class="btn btn-primary" asp-action="userRoles" asp-route-userId="@item.Id" >
            </td>
        </tr>
        }
    </tbody>
</table>
</form>