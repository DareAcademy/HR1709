@model NationalityDTO

@{
    ViewData["Title"] = "NewNationality";
    Layout = "~/Views/Shared/_menu.cshtml";
}

<form method="post">


        <input type="hidden" class="form-control" asp-for="Id">
  

<div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" placeholder="nationality name" asp-for="Name">
</div>


<div class="mb-3">
        @if((bool)ViewData["IsEdit"]==false){
        <input type="submit" class="btn btn-primary" value="Save" asp-action="SaveData">
    }
    else{
        <input type="submit" class="btn btn-primary" value="Update" asp-action="UpdateData">
        }
</div>

</form>
