@using HR1709.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_menu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" >HR System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (signInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Index" asp-controller="Employee">New Employee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="EmployeeList">Employee List</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Department" asp-action="Index">Department</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Nationality" asp-action="Index">New Nationality</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Nationality" asp-action="Index1">Nationality List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Accounts" asp-action="createAccount">Create Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Accounts" asp-action="NewRole">New Role</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Accounts" asp-action="UserList">User List</a>
                            </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Accounts" asp-action="Logout">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" >@User.Identity.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
