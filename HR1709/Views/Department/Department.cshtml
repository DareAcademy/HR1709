@model vmDepartment
@{
    ViewData["Title"] = "Department";
    Layout = "~/Views/Shared/_menu.cshtml";
}
<form method="post">
<div class="mb-3">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.liDepartmentDTO)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mb-3">
    <label class="form-label"></label>
    <input type="text" class="form-control" asp-for="departmentDTO.Name">
</div>

<div class="mb-3">
    <input type="submit" class="btn btn-primary" asp-action="Save">
</div>
</form>

